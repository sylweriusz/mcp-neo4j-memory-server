    "neo4j-driver": "^5.18.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^3.1.1",
    "prettier": "^3.5.2",
    "shx": "^0.3.4",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  },
  "engines": {
    "node": "22.x"
